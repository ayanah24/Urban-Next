<%- layout("layouts/boilerplate") %>
  <!-- File: views/listings/index.ejs -->

  <div id="filters">
    <a href="/listings?category=Trending" class="filters">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>

    <a href="/listings?category=Rooms" class="filters">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>

    <a href="/listings?category=Iconic cities" class="filters">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic cities</p>
    </a>

    <a href="/listings?category=Mountains" class="filters">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </a>

    <a href="/listings?category=Castles" class="filters">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </a>

    <a href="/listings?category=Amazing pools" class="filters">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing pools</p>
    </a>

    <a href="/listings?category=Camping" class="filters">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>
    
    <a href="/listings?category=Farms" class="filters">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </a>

    <a href="/listings?category=Shops" class="filters">
      <div><i class="fa-solid fa-shop"></i></div>
      <p>Shops</p>
    </a>

    <a href="/listings?category=Restro" class="filters">
      <div><i class="fa-solid fa-utensils"></i></div>
      <p>Restro</p>
    </a>

    <a href="/listings?category=Home" class="filters">
      <div><i class="fa-solid fa-house"></i></div>
      <p>Home</p>
    </a>

    <a href="/listings?category=Hotels" class="filters">
      <div><i class="fa-solid fa-hotel"></i></div>
      <p>Hotels</p>
    </a>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
      </div>
    </div>
  </div>


  <div class="row row-cols-lg-5 row-cols-md-3 row-cols-sm-2 mt-3">
    <% if (allListings.length===0 && q) { %>
      <div class="alert alert-warning text-center mt-8">
        No listings found for "<%= q %>"
      </div>
      <% } else { %>
        <% for(let listing of allListings){ %>
          <div class="card col listing-card">
            <a href="/listings/<%= listing._id %>" class="listing-link" style="all: unset; display: block;">
              <% if (listing.image && listing.image.length> 0) { %>
                <img src="<%= listing.image[0].url %>" alt="Listing Image" class="card-img-top">
                <!-- Show first image -->
                <% } else { %>
                  <img src="/path/to/placeholder-image.jpg" alt="No Image Available" class="card-img-top">
                  <!-- Add a placeholder image in your public folder -->
                  <% } %>

                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text">
                        <b>
                          <%= listing.title %>
                        </b><br />
                        â‚¹ <span class="listing-price" data-base-price="<%= listing.price %>">
                          <%= listing.price.toLocaleString("en-IN") %>
                        </span>/night
                        <i class="tax-info" style="display:none;">&nbsp; (+18% GST)</i>
                      </p>
                    </div>
            </a>
          </div>
          <% } %>
            <% } %>
  </div>

  <script src="/js/tax-toggle.js"></script>