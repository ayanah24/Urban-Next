<%- layout("layouts/boilerplate") %>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <div class="listing-form-container">
        <div class="listing-form-card">
            <h2 class="form-heading">List Your Property</h2>
            <p class="form-subheading">Provide details so guests can discover your listing</p>

            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

                <!-- Section 1: Basic Info -->
                <h5 class="section-title"><i class="bi bi-info-circle"></i> Basic Information</h5>
                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input name="listing[title]" placeholder="e.g. Cozy Beachfront Villa" type="text"
                        class="form-control" required>
                    <div class="invalid-feedback">Please enter a valid title.</div>
                </div>

             
                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input name="listing[description]" type="text" class="form-control" placeholder="Enter description"
                        required>
                    <div class="invalid-feedback">Please enter a short description.</div>
                </div>



                <!-- Section 2: Photos -->
                <h5 class="section-title mt-4"><i class="bi bi-image"></i> Photos</h5>
                <div class="mb-3">
                    <label class="form-label">Upload Listing Images (up to 5)</label>
                    <input name="listing[images]" type="file" class="form-control" multiple required>
                    <div class="invalid-feedback">Please upload at least one image.</div>
                </div>

                <!-- ... (continue with category, offers, etc.) -->

                <!-- section 3: Category -->
                <h5 class="section-title"><i class="bi bi-tags"></i> Select Category</h5>
                <div class="mb-3">
                    <select name="listing[category]" class="form-select" required>
                        <option value="">-- Select a category --</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic cities">Iconic cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing pools">Amazing pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Farms">Farms</option>
                        <option value="Shops">Shops</option>
                        <option value="Restro">Restro</option>
                        <option value="Home">Home</option>
                        <option value="Hotels">Hotels</option>
                    </select>
                </div>

                <!-- Section 4: What this place offers -->
                <h5 class="section-title mt-4"><i class="bi bi-stars"></i> What this place offers</h5>

                <div class="row">
                    <!-- Comfort & Essentials -->
                    <div class="col-md-6">
                        <h6 class="mt-2">Comfort & Essentials</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Free Wifi"
                                id="wifi">
                            <label class="form-check-label" for="wifi"><i class="bi bi-wifi"></i> Free Wifi</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Air Conditioning" id="ac">
                            <label class="form-check-label" for="ac"><i class="bi bi-wind"></i> Air Conditioning</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Heating"
                                id="heating">
                            <label class="form-check-label" for="heating"><i class="bi bi-thermometer-half"></i>
                                Heating</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="TV" id="tv">
                            <label class="form-check-label" for="tv"><i class="bi bi-tv"></i> TV</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Private Bathroom" id="bathroom">
                            <label class="form-check-label" for="bathroom"><i class="bi bi-droplet"></i> Private
                                Bathroom</label>
                        </div>
                    </div>

                    <!-- Kitchen & Dining -->
                    <div class="col-md-6">
                        <h6 class="mt-2">Kitchen & Dining</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Kitchen"
                                id="kitchen">
                            <label class="form-check-label" for="kitchen"><i class="bi bi-egg-fried"></i>
                                Kitchen</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Refrigerator" id="fridge">
                            <label class="form-check-label" for="fridge"><i class="bi bi-box"></i> Refrigerator</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Microwave"
                                id="microwave">
                            <label class="form-check-label" for="microwave"><i class="bi bi-lightning"></i>
                                Microwave</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Coffee Maker" id="coffee">
                            <label class="form-check-label" for="coffee"><i class="bi bi-cup-hot"></i> Coffee
                                Maker</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Dining Area"
                                id="dining">
                            <label class="form-check-label" for="dining"><i class="bi bi-people"></i> Dining
                                Area</label>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <!-- Outdoor & Facilities -->
                    <div class="col-md-6">
                        <h6 class="mt-2">Outdoor & Facilities</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Free Parking" id="parking">
                            <label class="form-check-label" for="parking"><i class="bi bi-car-front"></i> Free
                                Parking</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Swimming Pool" id="pool">
                            <label class="form-check-label" for="pool"><i class="bi bi-water"></i> Swimming Pool</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Garden"
                                id="garden">
                            <label class="form-check-label" for="garden"><i class="bi bi-tree"></i> Garden</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Balcony"
                                id="balcony">
                            <label class="form-check-label" for="balcony"><i class="bi bi-house-door"></i>
                                Balcony</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Fitness Center" id="gym">
                            <label class="form-check-label" for="gym"><i class="bi bi-bar-chart"></i> Fitness
                                Center</label>
                        </div>
                    </div>

                    <!-- Services & Accessibility -->
                    <div class="col-md-6">
                        <h6 class="mt-2">Services & Accessibility</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="24/7 Reception" id="reception">
                            <label class="form-check-label" for="reception"><i class="bi bi-person-lines-fill"></i> 24/7
                                Reception</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Room Service" id="roomservice">
                            <label class="form-check-label" for="roomservice"><i class="bi bi-bell"></i> Room
                                Service</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]" value="Elevator"
                                id="elevator">
                            <label class="form-check-label" for="elevator"><i class="bi bi-building"></i>
                                Elevator</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Wheelchair Accessible" id="wheelchair">
                            <label class="form-check-label" for="wheelchair"><i class="bi bi-universal-access"></i>
                                Wheelchair Accessible</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="listing[offers][]"
                                value="Pet Friendly" id="pets">
                            <label class="form-check-label" for="pets"><i class="bi bi-heart"></i> Pet Friendly</label>
                        </div>
                    </div>
                </div>


                <!-- Section 3: Pricing & Location -->
                <h5 class="section-title mt-4"><i class="bi bi-geo-alt"></i> Pricing & Location</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Price (â‚¹)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-rupee"></i></span>
                            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control"
                                required>
                        </div>
                        <div class="invalid-feedback">Please enter a valid price.</div>
                    </div>

                    <div class="col-md-8">
                        <label class="form-label">Country</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-globe"></i></span>
                            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control"
                                required>
                        </div>
                        <div class="invalid-feedback">Please enter a valid country.</div>
                    </div>
                </div>

                <div class="mb-3 mt-3">
                    <label class="form-label">Location</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-pin-map"></i></span>
                        <input name="listing[location]" placeholder="Enter location" type="text" class="form-control"
                            required>
                    </div>
                    <div class="invalid-feedback">Please enter a valid location.</div>
                </div>

                <!-- Submit Button -->
                <div class="text-end mt-4">
                    <button class="btn btn-primary btn-lg px-4"><i class="bi bi-check-circle"></i> Publish
                        Listing</button>
                </div>
            </form>
        </div>
    </div>